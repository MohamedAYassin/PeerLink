# Frontend Configuration

# Backend URL (default: http://localhost:5000)
VITE_BACKEND_URL=http://localhost:5000

# WebSocket URL (default: http://localhost:5000)
VITE_WS_URL=http://localhost:5000

# Cluster Mode - If using multiple backend nodes
# Set to true to enable round-robin load balancing
VITE_USE_CLUSTER=true

# Cluster Node URLs (comma-separated)
VITE_CLUSTER_NODES=http://localhost:5000,http://localhost:5001,http://localhost:5002

# File Transfer Configuration
VITE_CHUNK_SIZE=65536
VITE_UPLOAD_CONCURRENCY=6

# Socket Configuration
VITE_SOCKET_RECONNECTION_DELAY=1000
VITE_SOCKET_RECONNECTION_DELAY_MAX=5000
VITE_SOCKET_RECONNECTION_ATTEMPTS=5
